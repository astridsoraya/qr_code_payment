<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/mOrderItemName"
        android:layout_width="89dp"
        android:layout_height="79dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/mOrderItemQty"
        tools:layout_editor_absoluteY="40dp" />

    <Button
        android:id="@+id/mOrderAddQty"
        android:layout_width="39dp"
        android:layout_height="36dp"
        android:background="@android:drawable/arrow_up_float"
        app:layout_constraintBottom_toTopOf="@+id/mOrderItemQty"
        app:layout_constraintEnd_toStartOf="@+id/mOrderItemQty"
        app:layout_constraintStart_toEndOf="@+id/mOrderItemQty"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/mOrderMinQty"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:background="@android:drawable/arrow_down_float"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mOrderItemQty"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/mOrderItemQty"
        android:layout_width="94dp"
        android:layout_height="56dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <TextView
        android:id="@+id/mOrderItemPrice"
        android:layout_width="95dp"
        android:layout_height="58dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mOrderItemQty"
        tools:layout_editor_absoluteY="54dp" />
</android.support.constraint.ConstraintLayout>